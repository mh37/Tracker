@model Tracker.Models.Category

@{
    ViewData["Title"] = "Delete";
}

<h4>
    <a class="btn-floating btn-medium waves-effect waves-light blue" asp-action="Index"><i class="material-icons">arrow_back</i></a>
    Delete Category: @Html.DisplayFor(model => model.CategoryName)
</h4>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Category Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CategoryName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="CategoryId" />
        <input type="submit" value="Delete" class="waves-effect waves-light btn red" /> 
        <a class="waves-effect waves-light btn" asp-action="Index">Cancel</a>
    </form>
</div>
