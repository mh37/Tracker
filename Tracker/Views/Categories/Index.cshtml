@model IEnumerable<Tracker.Models.Category>

@{
    ViewData["Title"] = "Index";
}

<a class="waves-effect waves-light btn" asp-area="" asp-controller="Categories" asp-action="Create">Add</a>

<table class="table">
    <thead>
        <tr>
            <th>
                Category
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                <a class="btn-floating btn-small waves-effect waves-light blue" asp-action="Edit" asp-route-id="@item.CategoryId"><i class="material-icons">edit</i></a>
                <a class="btn-floating btn-small waves-effect waves-light blue" asp-action="Details" asp-route-id="@item.CategoryId"><i class="material-icons">list</i></a>
                <a class="btn-floating btn-small waves-effect waves-light red" asp-action="Delete" asp-route-id="@item.CategoryId"><i class="material-icons">delete</i></a>
            </td>
        </tr>
}
    </tbody>
</table>
