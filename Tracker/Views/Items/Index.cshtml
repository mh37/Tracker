@model IEnumerable<Tracker.Models.Item>

@{
    ViewData["Title"] = "Index";
}

<a class="waves-effect waves-light btn" asp-area="" asp-controller="Items" asp-action="Create">Add</a>


<table class="table">
    <thead>
        <tr>
            <th>
                Item
            </th>
            <th>
                Details
            </th>
            <th>
                Created
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ItemName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Details)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.CategoryName)
            </td>
            <td>
                <a class="btn-floating btn-small waves-effect waves-light blue" asp-action="Edit" asp-route-id="@item.ItemId"><i class="material-icons">edit</i></a>
                <a class="btn-floating btn-small waves-effect waves-light blue" asp-action="Details" asp-route-id="@item.ItemId"><i class="material-icons">list</i></a>
                <a class="btn-floating btn-small waves-effect waves-light red" asp-action="Delete" asp-route-id="@item.ItemId"><i class="material-icons">delete</i></a>
            </td>
        </tr>
}
    </tbody>
</table>
