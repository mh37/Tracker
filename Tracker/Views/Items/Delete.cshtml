@model Tracker.Models.Item

@{
    ViewData["Title"] = "Delete";
}

<h4>
    <a class="btn-floating btn-medium waves-effect waves-light blue" asp-action="Index"><i class="material-icons">arrow_back</i></a>
    Delete Item: @Html.DisplayFor(model => model.ItemName)
</h4>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ItemName)
        </dd>
        <dt class = "col-sm-2">
            Details
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Details)
        </dd>
        <dt class = "col-sm-2">
            Date
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreatedDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Category.CategoryId)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ItemId" />
        <input type="submit" value="Delete" class="waves-effect waves-light btn red" /> 
        <a class="waves-effect waves-light btn" asp-action="Index">Cancel</a>
    </form>
</div>
